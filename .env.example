# .env.example - Template for environment variables
# Copy this file to .env and fill in your actual values

# =============================
# AI PROVIDERS (Required)
# =============================
# GitHub AI (Azure OpenAI) - REQUIRED
API_KEY=your_github_ai_token_here
BASE_URL=https://models.inference.ai.azure.com
MODEL=gpt-4o-mini
TEMPERATURE=0.7
MAX_TOKENS=2000

# Ollama (Local AI) - OPTIONAL
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=gemma2:9b
PREFERRED_AI_PROVIDER=github

# =============================
# DATABASE
# =============================
DB_PATH=./chatbot.db
TIMEZONE=Asia/Ho_Chi_Minh

# =============================
# FREE SEARCH SETTINGS
# =============================
# Enable/disable free realtime search
ENABLE_REALTIME_SEARCH=true

# NO API KEYS NEEDED! 
# Free search uses:
# - Wikipedia API (free)
# - DuckDuckGo API (free)
# - Web scraping (free)

# Search settings
SEARCH_LANGUAGE=vi
MAX_SEARCH_RESULTS=5
SEARCH_CACHE_TTL_MINUTES=60
SEARCH_TIMEOUT_SECONDS=10

# =============================
# PERSONAL INFO API (Optional)
# =============================
# If you have your own personal info API
ENABLE_PERSONAL_INFO=false
# PERSONAL_API_BASE_URL=https://your-personal-api.com/api/v1
# PERSONAL_API_TOKEN=your_personal_api_token

# =============================
# PERFORMANCE SETTINGS
# =============================
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================
# VOICE FEATURES
# =============================
VOICE_ENABLED=true
DEFAULT_VOICE_LANGUAGE=vi-VN

# =============================
# LOGGING
# =============================
LOG_LEVEL=INFO

# =============================
# SECURITY NOTES
# =============================
# NEVER commit the actual .env file to git!
# Only commit this .env.example template
# 
# The .env file should contain your real:
# - API keys
# - Database passwords
# - Secret tokens
# - Personal information